package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_binary {
    name: "set-verity-state",
    srcs: ["set-verity-state.cpp"],
    shared_libs: [
        "libbase",
        "libcrypto",
        "libcrypto_utils",
        "libcutils",
        "libfs_mgr_binder",
        "liblog",
        "libutils",
    ],
    static_libs: [
        "libavb_user",
    ],

    cflags: ["-Werror"],
    cppflags: [
        "-DALLOW_DISABLE_VERITY=0",
    ],
    product_variables: {
        debuggable: {
            cppflags: [
                "-UALLOW_DISABLE_VERITY",
                "-DALLOW_DISABLE_VERITY=1",
            ],
        },
    },
    symlinks: [
        "enable-verity",
        "disable-verity",
    ],
}
